{
  "design_system": {
    "identity": {
      "name": "KioskFlow",
      "persona": "E1 - The Anti-AI Designer",
      "vibe": "Tactile, Friendly, Instant, Vibrant",
      "theme_mode": "light"
    },
    "typography": {
      "font_family": {
        "headings": "Outfit, sans-serif",
        "body": "DM Sans, sans-serif",
        "mono": "JetBrains Mono, monospace"
      },
      "scale": {
        "h1": "text-6xl md:text-8xl font-bold tracking-tight",
        "h2": "text-4xl md:text-6xl font-semibold tracking-tight",
        "h3": "text-2xl md:text-4xl font-medium",
        "body_lg": "text-lg md:text-xl leading-relaxed",
        "body": "text-base leading-relaxed",
        "caption": "text-sm font-medium tracking-wide uppercase"
      },
      "imports": [
        "https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,400;500;700&family=Outfit:wght@400;600;800&display=swap"
      ]
    },
    "colors": {
      "palette": {
        "primary": {
          "DEFAULT": "#0D9488",
          "foreground": "#FFFFFF",
          "hover": "#0F766E",
          "description": "Deep Teal - Used for primary actions, success states, and branding anchors."
        },
        "secondary": {
          "DEFAULT": "#F25C54",
          "foreground": "#FFFFFF",
          "hover": "#D9433B",
          "description": "Vibrant Coral - Used for 'Print', 'Upload', and high-energy CTAs."
        },
        "background": {
          "DEFAULT": "#FFFBF7",
          "paper": "#FFFFFF",
          "subtle": "#F0FDF4"
        },
        "foreground": {
          "DEFAULT": "#1E293B",
          "muted": "#64748B"
        },
        "accent": {
          "DEFAULT": "#FFD166",
          "foreground": "#1E293B"
        },
        "border": "#E2E8F0"
      },
      "gradients": {
        "brand": "bg-gradient-to-br from-[#0D9488] to-[#2DD4BF]",
        "warm": "bg-gradient-to-br from-[#F25C54] to-[#FFD166]"
      }
    },
    "spacing": {
      "container": {
        "padding": "p-6 md:p-12 lg:p-16",
        "gap": "gap-6 md:gap-12"
      },
      "kiosk_specific": {
        "touch_target": "min-h-[64px] min-w-[64px]",
        "button_padding": "py-6 px-12",
        "safe_area": "pb-32"
      }
    },
    "layout": {
      "grid_system": "grid grid-cols-1 md:grid-cols-12 gap-6",
      "kiosk_mode": {
        "orientation": "portrait",
        "max_width": "max-w-[1080px] mx-auto",
        "alignment": "flex flex-col justify-between h-screen"
      },
      "mobile_mode": {
        "orientation": "responsive",
        "max_width": "max-w-md mx-auto"
      }
    },
    "components": {
      "buttons": {
        "primary": "bg-primary text-primary-foreground rounded-full shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 font-bold text-xl uppercase tracking-wide",
        "secondary": "bg-secondary text-secondary-foreground rounded-full shadow-md hover:shadow-lg hover:-translate-y-1 transition-all duration-300 font-bold text-lg",
        "ghost": "bg-transparent text-foreground hover:bg-black/5 rounded-xl font-medium"
      },
      "cards": {
        "base": "bg-white rounded-3xl shadow-xl border border-black/5 overflow-hidden",
        "interactive": "hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 cursor-pointer"
      },
      "inputs": {
        "base": "bg-white border-2 border-black/10 rounded-xl px-6 py-4 text-lg focus:border-primary focus:ring-4 focus:ring-primary/20 transition-all outline-none"
      }
    },
    "motion": {
      "library": "framer-motion",
      "variants": {
        "fadeIn": {
          "initial": { "opacity": 0 },
          "animate": { "opacity": 1 },
          "exit": { "opacity": 0 }
        },
        "slideUp": {
          "initial": { "y": 50, "opacity": 0 },
          "animate": { "y": 0, "opacity": 1 }
        },
        "pop": {
          "initial": { "scale": 0.9, "opacity": 0 },
          "animate": { "scale": 1, "opacity": 1 }
        }
      }
    },
    "assets": {
      "icons": "lucide-react",
      "image_placeholders": {
        "hero": "https://images.unsplash.com/photo-1529156069898-49953e39b3ac?q=80&w=2532&auto=format&fit=crop",
        "gallery_1": "https://images.unsplash.com/photo-1516035069371-29a1b244cc32?q=80&w=2000&auto=format&fit=crop",
        "gallery_2": "https://images.unsplash.com/photo-1531746020798-e6953c6e8e04?q=80&w=2550&auto=format&fit=crop",
        "gallery_3": "https://images.unsplash.com/photo-1523906834658-6e24ef2386f9?q=80&w=2566&auto=format&fit=crop"
      }
    }
  },
  "implementation_plan": {
    "phases": [
      {
        "name": "Setup",
        "tasks": [
          "Install dependencies: framer-motion, lucide-react, clsx, tailwind-merge",
          "Configure Tailwind theme with Teal/Coral palette",
          "Add fonts to index.css"
        ]
      },
      {
        "name": "Components",
        "tasks": [
          "Create UI primitives (Button, Card, Input) with 'E1' styling",
          "Build Kiosk Layout (Vertical, Safe Areas)",
          "Build Mobile Layout (Responsive, Touch-first)"
        ]
      },
      {
        "name": "Pages",
        "tasks": [
          "Kiosk Home: Branding, Hero, Start Button",
          "Kiosk QR: Large QR display, Instructions",
          "Mobile Upload: File input, Progress, Success",
          "Kiosk Gallery: Grid of uploaded photos, Print CTA",
          "Admin: Simple config form"
        ]
      }
    ]
  },
  "universal_guidelines": [
    "DO NOT use generic gradients. Use solid, vibrant colors or subtle noise textures.",
    "Ensure all touch targets on Kiosk are at least 64x64px.",
    "Use 'data-testid' on ALL interactive elements.",
    "Animations are mandatory for all state changes.",
    "Avoid 'clinical' white; use warm off-white for backgrounds.",
    "Teal (#0D9488) is for Primary Actions. Coral (#F25C54) is for Highlights/Urgent Actions."
  ]
}